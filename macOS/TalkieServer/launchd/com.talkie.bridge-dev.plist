<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.talkie.bridge-dev</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/bun</string>
        <string>run</string>
        <string>src/server.ts</string>
        <string>--local</string>
        <string>--port</string>
        <string>8767</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/arach/dev/talkie-action-state-machine/macOS/TalkieBridge</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <key>RunAtLoad</key>
    <false/>

    <key>KeepAlive</key>
