{
  "name": "talkie-bridge",
  "version": "0.1.0",
  "description": "Tailscale bridge for remote Claude Code session access",
  "type": "module",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "stop": "kill $(cat ~/Library/Application\\ Support/Talkie/Bridge/bridge.pid) 2>/dev/null || echo 'Not running'",
    "status": "cat ~/Library/Application\\ Support/Talkie/Bridge/bridge.pid 2>/dev/null && echo 'Running' || echo 'Stopped'"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest"
  }
}
