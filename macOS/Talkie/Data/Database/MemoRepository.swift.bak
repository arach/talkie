//
//  Repository protocol for accessing voice memos
//  Abstraction layer for storage (currently GRDB, can swap later)
//

import Foundation

// MARK: - Sort Options

enum MemoSortField {
    case timestamp    // Sort by createdAt
    case title        // Sort by title
    case duration     // Sort by duration
    case workflows    // Sort by workflow count (computed)
}

// MARK: - Repository Protocol

protocol MemoRepository: Actor {
    /// Fetch memos with pagination and sorting
    /// This is where the SQLite magic happens - LIMIT/OFFSET at query level
    func fetchMemos(
        sortBy: MemoSortField,
        ascending: Bool,
        limit: Int,
        offset: Int,
        searchQuery: String?
    ) async throws -> [VoiceMemo]

    /// Count total memos (for pagination UI)
    func countMemos(searchQuery: String?) async throws -> Int

    /// Fetch single memo by ID with relationships
    func fetchMemo(id: UUID) async throws -> MemoWithRelationships?

    /// Save or update memo
    func saveMemo(_ memo: VoiceMemo) async throws

    /// Delete memo
    func deleteMemo(id: UUID) async throws

    /// Fetch transcript versions for a memo
    func fetchTranscriptVersions(for memoId: UUID) async throws -> [TranscriptVersion]

    /// Fetch workflow runs for a memo
    func fetchWorkflowRuns(for memoId: UUID) async throws -> [WorkflowRun]

    /// Save transcript version
    func saveTranscriptVersion(_ version: TranscriptVersion) async throws

    /// Save workflow run
    func saveWorkflowRun(_ run: WorkflowRun) async throws
}

// MARK: - Memo with Relationships

struct MemoWithRelationships {
    let memo: VoiceMemo
    let transcriptVersions: [TranscriptVersion]
    let workflowRuns: [WorkflowRun]

    /// Computed: workflow count (cached for performance)
    var workflowCount: Int {
        workflowRuns.count
    }

    /// Latest transcript version
    var latestTranscript: TranscriptVersion? {
        transcriptVersions.sorted { $0.version > $1.version }.first
    }
}
